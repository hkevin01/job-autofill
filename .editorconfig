# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON, and related files
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_size = 2
max_line_length = 100

# CSS, SCSS, LESS files
[*.{css,scss,less}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Python files (if any)
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# XML files
[*.{xml,svg}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Package files (usually auto-generated)
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2

# Ignore minified files
[*.min.*]
insert_final_newline = false
trim_trailing_whitespace = false
