{
  "manifest_version": 3,
  "name": "Job AutoFill - AI Application Assistant",
  "version": "1.0.0",
  "description": "Automatically fill job applications using AI-powered responses tailored to your profile",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "camera"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content-scripts/form-detector.js",
        "content-scripts/form-filler.js"
      ],
      "css": [
        "content-scripts/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Job AutoFill",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}
